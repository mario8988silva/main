<section class="mb-6">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-400">Gestão de contas</p>
            <h1 class="text-3xl font-semibold">Criar nova conta</h1>
        </div>
        <a href="/dashboard" class="hidden rounded-xl border border-slate-800 px-4 py-2 text-xs font-semibold text-slate-300 hover:bg-slate-900 sm:block">Voltar</a>
    </div>
</section>

<section class="grid gap-6 lg:grid-cols-[1.1fr]">
    <div class="rounded-3xl border border-slate-800 bg-slate-900/70 p-6 shadow-[0_25px_60px_-25px_rgba(15,23,42,0.65)] max-w-2xl">
        <form method="post" class="space-y-5">
            <div>
                <label for="name" class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-400">Nome da conta</label>
                <input id="name" name="name" type="text" required maxlength="80" placeholder="Ex.: Poupança Viagem" class="w-full rounded-xl border border-slate-800 bg-slate-950/70 px-4 py-3 text-sm text-slate-100 placeholder:text-slate-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/40" />
            </div>

            <div>
                <label for="description" class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-400">Descrição</label>
                <textarea id="description" name="description" required rows="4" maxlength="240" placeholder="Ex.: Poupança para viagem em 2025" class="w-full rounded-xl border border-slate-800 bg-slate-950/70 px-4 py-3 text-sm text-slate-100 placeholder:text-slate-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/40"></textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-2">
                <a href="/dashboard" class="rounded-xl border border-slate-800 px-4 py-2 text-sm font-semibold text-slate-200 hover:bg-slate-900">Cancelar</a>
                <button type="submit" class="rounded-xl bg-gradient-to-r from-sky-500 to-violet-500 px-4 py-2 text-sm font-semibold text-slate-950 hover:brightness-110">Criar conta</button>
            </div>
        </form>
    </div>
</section>